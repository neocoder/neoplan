{
	"compilerOptions": {
		"module": "CommonJS",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
	  },
	  "include": ["src/**/*"],
	  "exclude": ["node_modules", "**/*.spec.ts"]
}
